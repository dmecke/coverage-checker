{
    "name": "dmecke/coverage-checker",
    "description": "Check code coverage per namespace.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Mecke",
            "email": "daniel.mecke@cunningsoft.de"
        }
    ],
    "autoload": {
        "psr-4": {
            "CoverageChecker\\": "src/",
            "Tests\\CoverageChecker\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": "^7.3|^8.0",
        "ext-simplexml": "*",
        "symfony/console": "^4.2|^5.0",
        "symfony/yaml": "^4.2|^5.0"
    },
    "config": {
        "sort-packages": true
    },
    "bin": [
        "bin/coverage-checker"
    ],
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    }
}
